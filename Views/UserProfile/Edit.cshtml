@using PhotoPortalWebApp.ViewModels
@model EditUserProfileViewModel

@{
    ViewData["Title"] = "Edit My Profile";
}

<main id="main">
    <div class="page-header d-flex align-items-center" style="padding-bottom:0">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h3 class="login-title">Edit club</h3>
                </div>
            </div>
        </div>
    </div>
    <section id="contact" class="contact" style="min-height:55vh">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="mb-2"><a asp-action="Index">Cancel editing</a></div>
                    <div class="row justify-content-center">
                        <div class="col-xl-12">
                            <form method="post" asp-action="Edit" enctype="multipart/form-data" class="php-email-form">
                                <input type="hidden" id="Id" name="Id" asp-for="Id" />
                                <div class="form-group mt-0">
                                    <label asp-for="FullName">Full Name</label>
                                    <input asp-for="FullName" class="form-control" placeholder="Full Name">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <label asp-for="ProfileImage">Profile Image</label>
                                    <input asp-for="ProfileImage" type="file" class="form-control" placeholder="Image">
                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>
</main>