@model Club

@{
    ViewData["Title"] = "Club Details";
}

<main id="main">
    <div class="page-header d-flex align-items-center" style="padding-bottom:0;min-height: 0vh">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                </div>
            </div>
        </div>
    </div>
    <section id="gallery-single" class="gallery-single">
        <div class="container">
            <div>
                <a asp-action="Index">Return to clubs</a>
            </div>
            <div class="row gy-4 mt-3">
                <div class="col-lg-6">
                    <div class="portfolio-info">
                        <h3>Club details</h3>
                        <ul>
                            <li><strong>Title</strong> <h4>@Model.Title</h4></li>
                            <li><strong>Category</strong> <span>@Model.ClubCategory</span></li>
                            <li><strong>Description</strong> <span>@Model.Description</span></li>
                        </ul>
                        <h3>Club address</h3>
                        <ul>
                            <li><strong>City</strong> <h5>@Model.Address?.City</h5></li>
                            <li><strong>Street</strong> <span>@Model.Address?.Street</span></li>
                            <li><strong>Country</strong> <span>@Model.Address?.Country</span></li>
                            <li><strong>Postal Code</strong> <span>@Model.Address?.PostalCode</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 justify-content-center">
                    <img class="rounded-circle rounded mx-auto d-block" style="max-width:30vw" src="@Model.ProfilePictureUrl" alt="">
                </div>
            </div>

        </div>
    </section>

</main>