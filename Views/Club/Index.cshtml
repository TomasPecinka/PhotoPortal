@model IEnumerable<Club>

@{
    ViewData["Title"] = "Photography Clubs";
}

<main id="main">
    <div class="page-header d-flex align-items-center">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>Photography Clubs</h2>
                    <p>Odio et unde deleniti. Deserunt numquam exercitationem. Officiis quo odio sint voluptas consequatur ut a odio voluptatem. Sit dolorum debitis veritatis natus dolores. Quasi ratione sint. Sit quaerat ipsum dolorem.</p>
                </div>
            </div>
        </div>
    </div>
    <section id="gallery" class="gallery" style="min-height:40vh">
        <div class="container col-sm-8">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th style="background-color:#000" scope="col">Club</th>
                        <th class ="text-center" style="background-color:#000" scope="col">Category</th>
                    </tr>
                </thead>
                <tbody >
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="background-color:#000">
                                <a asp-action="Details" asp-route-id="@item.Id"><img class="rounded-circle" style="margin-right:1rem" src="@item.ProfilePictureUrl" alt="@item.Title" width="100">@item.Title</a>
                            </td>
                            <td class="text-center align-middle" style="background-color:#000">@item.ClubCategory</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

</main>